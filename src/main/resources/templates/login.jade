include NavbarTransparent
tobody.sign-in-basic
    .page-header(style="background-image: url('https://images.unsplash.com/photo-1497294815431-9365093b7331?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1950&q=80');" loading='lazy')
        span.mask.bg-gradient-dark.opacity-6
        .container.my-auto
            .row
                .wrapper
                    .col-lg-4.col-md-8.col-12.mx-auto
                        .card.z-index-0.fadeIn3.fadeInBottom
                            .card-header.p-0.position-relative.mt-n4.mx-3.z-index-2
                                .bg-gradient-primary.shadow-primary.border-radius-lg.py-3.pe-1
                                    h4.text-white.font-weight-bolder.text-center.mt-2.mb-0 Sign in
                                    .row.mt-3
                                        .col-2.text-center.ms-auto
                                            a.btn.btn-link.px-3(href='javascript:;')
                                                i.fa.fa-facebook.text-white.text-lg
                                        .col-2.text-center.px-1
                                            a.btn.btn-link.px-3(href='javascript:;')
                                                i.fa.fa-github.text-white.text-lg
                                        .col-2.text-center.me-auto
                                            a.btn.btn-link.px-3(href='javascript:;')
                                                i.fa.fa-google.text-white.text-lg
                            .card-body
                                form.text-start(role='form' action="/submit-login" method="post")
                                    .input-group.input-group-outline.my-3
                                        label.form-label Email
                                        input.form-control(name="email" type="email" )
                                    .input-group.input-group-outline.mb-3
                                        label.form-label Password
                                        input.form-control(name="password" type="password" )
                                    .form-check.form-switch.d-flex.align-items-center.mb-3
                                        input#rememberMe.form-check-input(type='checkbox' checked='')
                                        label.form-check-label.mb-0.ms-3(for='rememberMe') Remember me
                                    .text-center
                                        button.btn.bg-gradient-primary.w-100.my-4.mb-2(type='submit' value="submit") Sign in
                                    p.mt-4.text-sm.text-center
                                        | Don't have an account?
